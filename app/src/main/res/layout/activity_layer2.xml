<ScrollView
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/wel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Services"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/hasil1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/wel"
            android:layout_marginStart="30dp"
            android:layout_marginTop="18dp"
            android:layout_toEndOf="@+id/nginx" />

        <TextView
            android:id="@+id/hasil2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/wel"
            android:layout_marginStart="12dp"
            android:layout_marginTop="87dp"
            android:layout_toEndOf="@+id/apache" />

        <ImageView
            android:id="@+id/nginx"
            android:layout_width="38dp"
            android:layout_height="28dp"
            android:layout_alignBottom="@+id/wel"
            android:layout_marginBottom="-38dp"
            app:srcCompat="@drawable/nginx" />

        <ImageView
            android:id="@+id/apache"
            android:layout_width="54dp"
            android:layout_height="28dp"
            android:layout_alignBottom="@+id/wel"
            android:layout_marginStart="-37dp"
            android:layout_marginBottom="-111dp"
            android:layout_toEndOf="@+id/nginx"
            app:srcCompat="@drawable/apache" />

        <ImageView
            android:id="@+id/nginx_stop"
            android:layout_width="31dp"
            android:layout_height="26dp"
            android:layout_below="@+id/wel"
            android:layout_marginStart="102dp"
            android:layout_marginTop="14dp"
            android:layout_toEndOf="@+id/nginx"
            app:srcCompat="@drawable/stop" />

        <ImageView
            android:id="@+id/apache_stop"
            android:layout_width="31dp"
            android:layout_height="26dp"
            android:layout_below="@+id/wel"
            android:layout_marginStart="84dp"
            android:layout_marginTop="83dp"
            android:layout_toEndOf="@+id/apache"
            app:srcCompat="@drawable/stop" />

        <ImageView
            android:id="@+id/php_fpm_stop"
            android:layout_width="31dp"
            android:layout_height="26dp"
            android:layout_below="@+id/wel"
            android:layout_marginStart="85dp"
            android:layout_marginTop="154dp"
            android:layout_toEndOf="@+id/apache"
            app:srcCompat="@drawable/stop" />

        <ImageView
            android:id="@+id/nginx_start"
            android:layout_width="29dp"
            android:layout_height="26dp"
            android:layout_below="@+id/wel"
            android:layout_marginStart="153dp"
            android:layout_marginTop="13dp"
            android:layout_toEndOf="@+id/nginx"
            app:srcCompat="@drawable/start" />

        <ImageView
            android:id="@+id/apache_start"
            android:layout_width="29dp"
            android:layout_height="26dp"
            android:layout_below="@+id/wel"
            android:layout_marginStart="134dp"
            android:layout_marginTop="83dp"
            android:layout_toEndOf="@+id/apache"
            app:srcCompat="@drawable/start" />

        <ImageView
            android:id="@+id/php_fpm_start"
            android:layout_width="29dp"
            android:layout_height="26dp"
            android:layout_below="@+id/wel"
            android:layout_marginStart="134dp"
            android:layout_marginTop="155dp"
            android:layout_toEndOf="@+id/apache"
            app:srcCompat="@drawable/start" />

        <Button
            android:id="@+id/res_stat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/wel"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="91dp"
            android:layout_marginTop="208dp"
            android:layout_marginEnd="87dp"
            android:text="Get Server resource status" />

        <TextView
            android:id="@+id/status"
            android:layout_width="wrap_content"
            android:layout_height="132dp"
            android:layout_below="@+id/res_stat"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="-3dp"
            android:layout_marginTop="22dp"
            android:layout_marginEnd="3dp" />

        <TextView
            android:id="@+id/last"
            android:layout_width="138dp"
            android:layout_height="188dp"
            android:layout_below="@+id/wel"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="-1dp"
            android:layout_marginEnd="0dp" />

        <ImageView
            android:id="@+id/php_fpm"
            android:layout_width="57dp"
            android:layout_height="39dp"
            android:layout_below="@+id/wel"
            android:layout_marginTop="148dp"
            app:srcCompat="@drawable/php_fpm" />

        <TextView
            android:id="@+id/hasil3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/wel"
            android:layout_marginStart="11dp"
            android:layout_marginTop="158dp"
            android:layout_toEndOf="@+id/php_fpm" />

    </RelativeLayout>

</ScrollView>