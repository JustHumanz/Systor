<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="73dp"
        android:layout_height="43dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="88dp"
        app:srcCompat="@drawable/info"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="3dp"
        android:text="info Aplikasi"
        android:textSize="10dp" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="199dp"
        android:layout_height="116dp"
        android:layout_below="@+id/textView3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="28dp"
        app:srcCompat="@drawable/monitor" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView4"
        android:layout_marginTop="-15dp"
        android:gravity="center"
        android:text="Andro-Systor\nVersion 1.0"
        android:textSize="20dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView4"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:textSize="15dp"
        android:text="Made by\tAldin" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView4"
        android:layout_marginTop="80dp"
        android:gravity="center"
        android:textSize="10dp"
        android:text="For more info\nWeb\t: Justhumanz.me\nMail\t: humanz@justhumanz.me\nTelegram\t: t.me/JustHumanz" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="46dp"
        android:layout_height="47dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="457dp"
        app:srcCompat="@drawable/opensource"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView"
        android:text="GPL license "
        android:layout_centerHorizontal="true"/>


</RelativeLayout>